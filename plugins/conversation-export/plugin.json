{
    "name": "email-briefing",
    "display_name": "Email Briefing Plugin",
    "version": "2.0.0",
    "author": "Digestr Community",
    "description": "Production email briefing delivery with scheduling and export capabilities",
    "digestr_version": ">=2.1.0",
    "entry_point": "main.py",
    "hooks": [
        "core.briefing_generated",
        "interactive.session_end"
    ],
    "commands": [
        {
            "name": "email-brief",
            "description": "Send briefing via email",
            "usage": "/email-brief [comprehensive|quick|analytical] [professional|social] [recipient@email.com]"
        },
        {
            "name": "schedule",
            "description": "Manage email schedules",
            "usage": "/schedule [list|test|status]"
        },
        {
            "name": "status",
            "description": "Show plugin status",
            "usage": "/status"
        },
        {
            "name": "save",
            "description": "Save briefing to file",
            "usage": "/save [markdown|html]"
        }
    ],
    "config_schema": {
        "enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable email briefing plugin"
        },
        "email": {
            "type": "object",
            "default": {
                "enabled": false
            },
            "description": "Email configuration (credentials via environment variables)"
        },
        "scheduling": {
            "type": "object",
            "default": {
                "enabled": true,
                "briefings": {
                    "morning": {
                        "enabled": true,
                        "time": "08:00",
                        "style": "comprehensive",
                        "sources": [
                            "professional"
                        ],
                        "recipients": [
                            "${DIGESTR_RECIPIENT_1}"
                        ]
                    },
                    "evening": {
                        "enabled": false,
                        "time": "18:00",
                        "style": "quick",
                        "sources": [
                            "social"
                        ],
                        "recipients": [
                            "${DIGESTR_RECIPIENT_1}"
                        ]
                    }
                }
            },
            "description": "Scheduled briefing configurations"
        },
        "export": {
            "type": "object",
            "default": {
                "save_directory": "~/Downloads/digestr-exports",
                "auto_export": false
            },
            "description": "File export settings"
        }
    },
    "dependencies": [
        "smtplib",
        "email"
    ],
    "environment_variables": [
        "DIGESTR_SMTP_SERVER",
        "DIGESTR_SMTP_PORT",
        "DIGESTR_SENDER_EMAIL",
        "DIGESTR_SENDER_PASSWORD",
        "DIGESTR_RECIPIENT_1",
        "DIGESTR_RECIPIENT_2"
    ],
    "tags": [
        "email",
        "briefing",
        "scheduling",
        "export",
        "production"
    ]
}