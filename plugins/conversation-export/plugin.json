{
    "name": "conversation-export",
    "display_name": "Email Scheduler & Export",
    "version": "1.0.0",
    "author": "Digestr Community",
    "description": "Schedule automated email briefings and export summaries in multiple formats",
    "digestr_version": ">=2.1.0",
    "entry_point": "main.py",
    "hooks": [
        "core.briefing_generated",
        "interactive.session_end"
    ],
    "commands": [
        {
            "name": "export",
            "description": "Export current session or briefing",
            "usage": "/export [markdown|html] [filename]"
        },
        {
            "name": "email",
            "description": "Email briefing to recipients",
            "usage": "/email [recipient@email.com]"
        },
        {
            "name": "schedule",
            "description": "Manage email schedules",
            "usage": "/schedule [list|add|remove|test] [schedule_name]"
        }
    ],
    "config_schema": {
        "enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable email scheduling and export"
        },
        "scheduling": {
            "type": "object",
            "default": {
                "enabled": true,
                "briefings": {
                    "morning": {
                        "time": "08:00",
                        "style": "comprehensive",
                        "recipients": [],
                        "enabled": true
                    },
                    "midday": {
                        "time": "13:00",
                        "style": "quick",
                        "recipients": [],
                        "enabled": false
                    },
                    "evening": {
                        "time": "20:00",
                        "style": "analytical",
                        "recipients": [],
                        "enabled": false
                    }
                }
            },
            "description": "Scheduled briefing configurations"
        },
        "export": {
            "type": "object",
            "default": {
                "formats": [
                    "markdown"
                ],
                "save_directory": "~/Downloads/digestr-exports",
                "auto_export": false,
                "filename_template": "briefing-{style}-{date}-{time}"
            },
            "description": "Export format and location settings"
        },
        "email": {
            "type": "object",
            "default": {
                "enabled": false,
                "provider": "gmail",
                "smtp_server": "",
                "smtp_port": 587,
                "sender_email": "",
                "sender_password": "",
                "use_tls": true,
                "subject_template": "ðŸ“° {style} Briefing - {date}"
            },
            "description": "Email configuration for scheduled briefings"
        },
        "content": {
            "type": "object",
            "default": {
                "skip_if_no_new_articles": true,
                "max_articles_per_briefing": 15,
                "minimum_importance": 1.0,
                "include_article_links": true
            },
            "description": "Content filtering and formatting options"
        }
    },
    "dependencies": [
        "schedule",
        "smtplib",
        "email"
    ],
    "tags": [
        "email",
        "scheduling",
        "export",
        "automation"
    ]
}